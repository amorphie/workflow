{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Error",
      "Override": {
        "amorphie.workflow": "Information"
      }
      
    },
    "WriteTo": [
      { 
        "Name": "File", 
        "Args": { 
          "path": "/logs/log-amorphie-hub.json", 
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "rollingInterval": "Day" 
        } 
      }
    ]
  }
}
